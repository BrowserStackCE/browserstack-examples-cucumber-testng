<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>browserstack</groupId>
	<artifactId>browserstack-examples-cucumber-testng</artifactId>
	<version>0.0.1-SNAPSHOT</version>


	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<maven-surefire-plugin.version>2.22.2</maven-surefire-plugin.version>
		<cucumber.version>6.9.1</cucumber.version>
		<selenium-java.version>3.141.59</selenium-java.version>
		<browserstack-local-java.version>1.0.6</browserstack-local-java.version>
		<slf4j.version>1.7.30</slf4j.version>
		<logback.version>1.2.3</logback.version>
		<json-simple.version>1.1.1</json-simple.version>
		<aspectj.version>1.9.1</aspectj.version>
		<testng.version>6.14.3</testng.version>
		<cucmberjava.version>1.2.5</cucmberjava.version>
		<comslang.version>3.11</comslang.version>
		<webdrivermanager.version>4.3.1</webdrivermanager.version>
		<alluretestng.version>2.12.0</alluretestng.version>
		<testng.version>6.14.3</testng.version>
		<cucmberjava.version>1.2.5</cucmberjava.version>
		<cucmberjvm.version>1.0.5</cucmberjvm.version>
		<cucmbertestng.version>1.2.5</cucmbertestng.version>
		<cucmberreporting.version>3.8.0</cucmberreporting.version>
		<test-name>End to End Scenario</test-name>
		<application-url>http://bstackdemo.com/</application-url>
		<application-localhost-url>http://localhost:3000/</application-localhost-url>
		<parallel-count>10</parallel-count>



	</properties>

	<dependencies>

		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
			<version>${selenium-java.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.browserstack</groupId>
			<artifactId>browserstack-local-java</artifactId>
			<version>${browserstack-local-java.version}</version>
		</dependency>

		<dependency>
			<groupId>com.googlecode.json-simple</groupId>
			<artifactId>json-simple</artifactId>
			<version>${json-simple.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>${comslang.version}</version>
		</dependency>
		<dependency>
			<groupId>io.github.bonigarcia</groupId>
			<artifactId>webdrivermanager</artifactId>
			<version>${webdrivermanager.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>io.qameta.allure</groupId>
			<artifactId>allure-testng</artifactId>
			<version>${alluretestng.version}</version>
		</dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>${slf4j.version}</version>
		</dependency>
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-classic</artifactId>
			<version>${logback.version}</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/org.testng/testng -->
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>${testng.version}</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/com.github.workerframework.messagebuilder/worker-example-message-builder -->

		<!-- https://mvnrepository.com/artifact/org.apache.poi/poi-ooxml -->
		<dependency>
			<groupId>org.apache.poi</groupId>
			<artifactId>poi-ooxml</artifactId>
			<version>3.9</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/org.apache.poi/poi -->
		<dependency>
			<groupId>org.apache.poi</groupId>
			<artifactId>poi</artifactId>
			<version>4.1.2</version>
		</dependency>
		<dependency>
			<groupId>io.cucumber</groupId>
			<artifactId>cucumber-java</artifactId>
			<version>6.8.2</version>
		</dependency>
		<dependency>
			<groupId>io.cucumber</groupId>
			<artifactId>cucumber-core</artifactId>
			<version>6.8.2</version>
		</dependency>
		<dependency>
			<groupId>io.cucumber</groupId>
			<artifactId>cucumber-picocontainer</artifactId>
			<version>6.8.2</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>io.cucumber</groupId>
			<artifactId>cucumber-jvm</artifactId>
			<version>6.8.2</version>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>io.cucumber</groupId>
			<artifactId>cucumber-testng</artifactId>
			<version>6.8.2</version>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>on-prem</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<argLine>-Dcucumber.filter.name="${test-name}"
							</argLine>
							<systemPropertyVariables>
								<environment>local</environment>
								<url>${application-url}</url>
							</systemPropertyVariables>
							<suiteXmlFiles>
								<suiteXmlFile>src/test/resources/conf/TestNG_Single.xml</suiteXmlFile>
							</suiteXmlFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>on-prem-suite</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<systemPropertyVariables>
								<environment>local</environment>
								<url>${application-url}</url>
							</systemPropertyVariables>
							<suiteXmlFiles>
								<suiteXmlFile>src/test/resources/conf/TestNG_Single.xml</suiteXmlFile>
							</suiteXmlFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>


		<profile>
			<id>docker</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<argLine>-Dcucumber.filter.name="${test-name}"
							</argLine>
							<systemPropertyVariables>
								<environment>docker</environment>
								<url>${application-url}</url>
							</systemPropertyVariables>
							<suiteXmlFiles>
								<suiteXmlFile>src/test/resources/conf/TestNG_Single.xml</suiteXmlFile>
							</suiteXmlFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>docker-parallel</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<systemPropertyVariables>
								<environment>docker</environment>
								<url>${application-url}</url>
							</systemPropertyVariables>
							<suiteXmlFiles>
								<suiteXmlFile>src/test/resources/conf/TestNG_Parallel.xml</suiteXmlFile>
							</suiteXmlFiles>
							<data-provider-thread-count>10</data-provider-thread-count>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>


		<profile>
			<id>bstack-single</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<argLine>-Dcucumber.filter.name="${test-name}"
							</argLine>
							<systemPropertyVariables>
								<environment>remote</environment>
								<url>${application-url}</url>
							</systemPropertyVariables>
							<suiteXmlFiles>
								<suiteXmlFile>src/test/resources/conf/TestNG_Single.xml</suiteXmlFile>
							</suiteXmlFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>bstack-local</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<argLine>-Dcucumber.filter.name="${test-name}"
							</argLine>

							<systemPropertyVariables>
								<environment>remote</environment>
								<url>${application-localhost-url}</url>
								<caps_type>local</caps_type>
								<env_cap_id>2</env_cap_id>
							</systemPropertyVariables>
							<suiteXmlFiles>
								<suiteXmlFile>src/test/resources/conf/TestNG_Single.xml</suiteXmlFile>
							</suiteXmlFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>bstack-local-parallel</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<systemPropertyVariables>
								<environment>remote</environment>
								<url>${application-localhost-url}</url>
								<caps_type>local</caps_type>
							</systemPropertyVariables>
							<suiteXmlFiles>
								<suiteXmlFile>src/test/resources/conf/TestNG_Parallel.xml</suiteXmlFile>
							</suiteXmlFiles>
							 <argLine>
                                   -Ddataproviderthreadcount=${parallel-count}
                                </argLine>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>bstack-parallel</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<systemPropertyVariables>
								<environment>remote</environment>
								<url>${application-url}</url>
							</systemPropertyVariables>
							<suiteXmlFiles>
								<suiteXmlFile>src/test/resources/conf/TestNG_Parallel.xml</suiteXmlFile>
							</suiteXmlFiles>
							  <argLine>
                                   -Ddataproviderthreadcount=${parallel-count}
                                </argLine>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>bstack-local-parallel-browsers</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<systemPropertyVariables>
								<environment>remote</environment>
								<url>${application-localhost-url}</url>
								<caps_type>local</caps_type>
							</systemPropertyVariables>
							<suiteXmlFiles>
								<suiteXmlFile>src/test/resources/conf/TestNG_MultipleParallel.xml</suiteXmlFile>
							</suiteXmlFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>bstack-parallel-browsers</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<systemPropertyVariables>
								<environment>remote</environment>
								<url>${application-url}</url>
							</systemPropertyVariables>
							<suiteXmlFiles>
								<suiteXmlFile>src/test/resources/conf/TestNG_MultipleParallel.xml</suiteXmlFile>
							</suiteXmlFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>bstack-parallel-mobile</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<systemPropertyVariables>
								<environment>remote</environment>
								<url>${application-url}</url>
								<caps_type>mobile</caps_type>
								<env_cap_id>2</env_cap_id>
							</systemPropertyVariables>
							<suiteXmlFiles>
								<suiteXmlFile>src/test/resources/conf/TestNG_MultipleParallel.xml</suiteXmlFile>
							</suiteXmlFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>




</project>